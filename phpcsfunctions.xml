<?xml version="1.0"?>
<ruleset name="FUNCTIONS">
 <description>Forbidden Functions</description>
 <arg name="tab-width" value="4"/>

<!-- Forbid some functions -->
<rule ref="Generic.PHP.ForbiddenFunctions">
  <properties>
    <property name="forbiddenFunctions" type="array" value="mysql_fetch_assoc=>null,mysql_query=>null,mysql_connect=>null,dd=>null,dd_query=>null,dp=>null,die=>null,var_dump=>null,exit=>null,sizeof=>count,delete=>unset,print=>echo,create_function=>null,env=>null,disableExceptionHandler=>null"/>
  </properties>
</rule>

</ruleset>